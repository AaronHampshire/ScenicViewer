{
  "name": "scenicviewer",
  "version": "1",
  
  "manifest_version": 2,
  
  "icons": {"128": "assets/icon_128.png"},
  "minimum_chrome_version": "23",
 
  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage"
  ],
  "file_handlers": {
    "application/pdf": {
      "types": [
          "pdf"
      ],
      "title": "scenicviewer"
    }
  }
}
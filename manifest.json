{
  "manifest_version": 2,
  "name": "Scenic Viewer",
  "version": "1",
  "description": "Uses HTML5 to display PDF files directly in the browser.",
   "icons": {"128": "assets/icon_128.png"},
  "permissions": [
    {"fileSystem": ["write", "retainEntries", "directory"]},
    "storage"
  ],
  "app":{
  "background": {
    "scripts": ["background.js"]
  }
  }
}
